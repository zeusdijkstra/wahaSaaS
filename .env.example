# ── AI ────────────────────────────────────────────────
ANTHROPIC_API_KEY=your_anthropic_key_here

# ── Waha ──────────────────────────────────────────────
WAHA_URL=http://localhost:3000        # where Waha is running
WAHA_SESSION=default                  # Waha session name
WAHA_API_KEY=your_api_key_here        # WAHA API key

# ── Session Config ────────────────────────────────────
WAHA_DEBUG=false                      # Enable debug mode for session
WAHA_CLIENT_DEVICE_NAME=WAHABot       # Device name shown in WhatsApp
WAHA_IGNORE_GROUPS=false              # Ignore group messages
WAHA_IGNORE_STATUS=false              # Ignore status updates
WAHA_IGNORE_CHANNELS=false            # Ignore channel messages
WAHA_IGNORE_BROADCAST=false           # Ignore broadcast messages

# ── Proxy (optional) ───────────────────────────────────
# WAHA_PROXY_SERVER=localhost:3128
# WAHA_PROXY_USERNAME=
# WAHA_PROXY_PASSWORD=

# ── Our webhook server ────────────────────────────────
WEBHOOK_PORT=3001                     # port our Node.js listens on

# ── Bot behaviour ─────────────────────────────────────
# Customize this to change how your bot behaves
BOT_SYSTEM_PROMPT=You are a helpful WhatsApp assistant. Keep replies short and friendly, like a real chat. Never say you are an AI unless directly asked.

# Only reply to private chats? true = ignore group messages
PRIVATE_ONLY=true
